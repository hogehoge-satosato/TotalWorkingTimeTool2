<configuration>
   
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/workingtime.log</file>
        <encoder>
        	<charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-1level %class - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
